[alias]
  ### Informational
  # Long-form
  alias            = !git config --get-regex '^alias\\.'
  amend            = commit --amend
  blame-short      = blame -c
  chart            = !git diff --stat=$(tput cols)
  fetch-all        = !git remote -v | awk '{print $1}' | sort -u | xargs -L1 git fetch -v --progress
  files            = diff --name-only
  github-log       = !git --no-pager prettylog --reverse
  info-pane        = !clear && git status && git stash list
  last-commit      = log -n 1
  local-branches   = branch -l
  message          = show -s --format=medium
  nuke-dry         = clean -xdfn
  nuke-interactive = clean -xdfi
  prettylog        = log --pretty=format:'%C(blue)%h%C(reset) %C(bold)%s%C(reset) %C(yellow)<%ae>%C(reset)' --abbrev-commit
  push-force       = push --force-with-lease
  remote-branches  = branch -r
  summary          = diff --shortstat
  tags             = tag -l --sort=v:refname
  # Abbreviated
  br   = branch
  bs   = !git blame-short
  ch   = !git chart
  cm   = commit
  dc   = diff --cached
  fa   = !git fetch-all
  ghl  = !git github-log
  l5   = !git github-log -n5
  l10  = !git github-log -n10
  lbr  = !git local-branches
  lc   = !git last-commit
  lm   = log master..
  msg  = !git message
  nd   = !git nuke-dry
  ni   = !git nuke-interactive
  p    = push -u
  pf   = !git push-force
  pfoh = !git push-force origin HEAD
  pl   = !git prettylog
  poh  = push -u origin HEAD
  puom = pull origin master
  rbr  = !git remote-branches
  st   = status
  sum  = diff --shortstat


  ### Potentially destructive
  # Long-form
  back             = checkout -
  nuke             = clean -xdf
  submodule-update = !git submodule update --init --recursive
  # Abbreviated
  cl  = clean -df
  co  = checkout
  sub = !git submodule-update

  ### Maxine is a little more lazy and used to what she had
  aa = add --all
  ap = add --patch
  ci = commit -v
  co = checkout
  pf = push --force-with-lease
  st = status
  pm = pull origin master
  mm = merge master

    # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  #   b = all branches
  #   bs = all branches, sorted by last commit date
  head = !git r -1
  h = !git head
  hp = "!. ~/.githelpers && show_git_head"
  r = !GIT_NO_PAGER=1 git l -30
  ra = !git r --all
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all
  b = "!. ~/.githelpers && pretty_git_branch"
  bs = "!. ~/.githelpers && pretty_git_branch_sorted"

[color]
  branch      = auto
  diff        = auto
  interactive = auto
  status      = auto
  ui          = auto

[color "branch"]
  current  = white bold reverse
  local    = green
  remote   = yellow
  upstream = yellow bold

[color "diff"]
  commit     = yellow bold
  frag       = blue ul
  func       = blue bold
  meta       = cyan bold
  new        = green bold
  old        = red bold
  whitespace = red reverse

[color "status"]
  branch    = white bold ul
  changed   = yellow bold reverse
  header    = black bold
  untracked = normal bold reverse
  updated   = magenta bold
  unmerged  = red bold reverse

[core]
  autocrlf   = input
  editor     = vim
  ignoreCase = true
  safecrlf   = warn
  trustctime = false
  excludesfile = ~/.gitignore

[core.whitespace]
  tab-in-indent = true

[diff]
  algorithm           = patience
  compactionHeuristic = true
  renames             = copies

[merge]
  verbosity = 5

[push]
  default = current

[status]
  showUntrackedFiles = all

[fetch]
  prune = false

[commit]
  verbose = true

[checkout]
  defaultRemote = origin

[pull]
  rebase = false

[include]
  path = ~/.gitconfig.local

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
